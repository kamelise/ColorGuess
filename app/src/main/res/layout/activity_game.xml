<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/boardColor"
    android:id="@+id/parent"
    tools:context=".GameActivity">
    <!--<Button-->
        <!--android:layout_width="36dp"-->
        <!--android:layout_height="36dp"-->
        <!--android:background="@drawable/game_screen_pause_ic"-->
        <!--android:elevation="20dp"-->
        <!--android:onClick="onPauseClick"/>-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="12dp"
        android:paddingLeft="14dp"
        android:paddingRight="12dp"
        android:gravity="center_vertical"
        android:elevation="@dimen/top_bar_elevation"
        android:background="@android:color/white"
        android:id="@+id/top_bar">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_menu_game"
            android:tint="@color/greyMenuColor"
            android:id="@+id/top_bar_menu_icon"
            android:onClick="onPauseClick"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:paddingTop="4dp"
            android:layout_toRightOf="@id/top_bar_menu_icon"
            android:text="Time: "
            android:textAllCaps="true"
            android:fontFamily="sans-serif"
            android:textSize="@dimen/top_bar_text_size"
            android:id="@+id/text_time_elapsed"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/text_time_elapsed"
            android:textAllCaps="true"
            android:fontFamily="sans-serif"
            android:textSize="@dimen/top_bar_time_size"
            android:text="02:45"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/best_time"
            android:paddingTop="4dp"
            android:text="Best: "
            android:textAllCaps="true"
            android:fontFamily="sans-serif"
            android:textSize="@dimen/top_bar_text_size"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textAllCaps="true"
            android:fontFamily="sans-serif"
            android:textSize="@dimen/top_bar_time_size"
            android:text="01:02"
            android:id="@+id/best_time"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_alignParentBottom="true"
        android:id="@+id/bottom_part">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="bottom"
            android:baselineAligned="true"
            android:id="@+id/guessed_layout"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:orientation="vertical"
            android:gravity="bottom"
            android:id="@+id/main_field"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="bottom"
            android:id="@+id/stack_layout" />
    </LinearLayout>
</RelativeLayout>