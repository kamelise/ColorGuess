<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="28dp"
            android:gravity="center_vertical"
            android:fontFamily="sans-serif-medium"
            android:textSize="@dimen/popup_title_text_size"
            android:textAllCaps="true"
            android:textColor="#222"
            android:text="Game Won!"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/res_stars_padding_top"
        android:paddingBottom="@dimen/res_stars_padding_bottom">
        <ImageView
            android:layout_width="@dimen/stat_star_ic_size"
            android:layout_height="@dimen/stat_star_ic_size"
            android:elevation="8dp"
            android:tint="@color/yellow"
            android:src="@drawable/ic_star"
            android:background="@drawable/square_transparent"/>
        <ImageView
            android:layout_width="@dimen/stat_star_ic_size"
            android:layout_height="@dimen/stat_star_ic_size"
            android:elevation="8dp"
            android:tint="@color/yellow"
            android:src="@drawable/ic_star"
            android:background="@drawable/square_transparent"/>
        <ImageView
            android:layout_width="@dimen/stat_star_ic_size"
            android:layout_height="@dimen/stat_star_ic_size"
            android:elevation="8dp"
            android:tint="@color/yellow"
            android:src="@drawable/ic_star"
            android:background="@drawable/square_transparent"/>
        <ImageView
            android:layout_width="@dimen/stat_star_ic_size"
            android:layout_height="@dimen/stat_star_ic_size"
            android:elevation="8dp"
            android:tint="@color/light_grey"
            android:src="@drawable/ic_star"
            android:background="@drawable/square_transparent"/>
        <ImageView
            android:layout_width="@dimen/stat_star_ic_size"
            android:layout_height="@dimen/stat_star_ic_size"
            android:tint="@color/light_grey"
            android:src="@drawable/ic_star"
            android:background="@drawable/square_transparent"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time: 05:34"
        android:textAllCaps="true"
        android:fontFamily="sans-serif"
        android:textSize="@dimen/stats_text_size"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:text="Wins in a row: 32"
        android:textAllCaps="true"
        android:fontFamily="sans-serif"
        android:textSize="@dimen/stats_text_size"/>
    <ImageView
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="13dp"
        android:src="@drawable/ic_cake"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/res_btns_margin_bottom"
        android:gravity="bottom">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:layout_marginLeft="23dp"
            android:gravity="left"
            android:text="Statistics"
            android:textAllCaps="true"
            android:fontFamily="sans-serif"
            android:textSize="@dimen/stats_text_size"
            android:textColor="@color/colorPrimary"
            android:background="@drawable/square_transparent"
            android:id="@+id/stats_btn"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:layout_marginRight="23dp"
            android:gravity="right"
            android:text="Start Again"
            android:textAllCaps="true"
            android:fontFamily="sans-serif"
            android:textSize="@dimen/stats_text_size"
            android:textColor="@color/colorPrimary"
            android:background="@drawable/square_transparent"
            android:id="@+id/start_again_btn"/>
    </LinearLayout>
</LinearLayout>