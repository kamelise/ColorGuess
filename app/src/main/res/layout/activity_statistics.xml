<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".StatisticsActivity">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/stats_stars_padding_top"
        android:paddingBottom="@dimen/stats_stars_padding_bottom">
        <ImageView
            android:layout_width="@dimen/stat_star_ic_size"
            android:layout_height="@dimen/stat_star_ic_size"
            android:elevation="8dp"
            android:tint="@color/yellow"
            android:src="@drawable/ic_star"
            android:background="@drawable/square_transparent"/>
        <ImageView
            android:layout_width="@dimen/stat_star_ic_size"
            android:layout_height="@dimen/stat_star_ic_size"
            android:elevation="8dp"
            android:tint="@color/yellow"
            android:src="@drawable/ic_star"
            android:background="@drawable/square_transparent"/>
        <ImageView
            android:layout_width="@dimen/stat_star_ic_size"
            android:layout_height="@dimen/stat_star_ic_size"
            android:elevation="8dp"
            android:tint="@color/yellow"
            android:src="@drawable/ic_star"
            android:background="@drawable/square_transparent"/>
        <ImageView
            android:layout_width="@dimen/stat_star_ic_size"
            android:layout_height="@dimen/stat_star_ic_size"
            android:elevation="8dp"
            android:tint="@color/light_grey"
            android:src="@drawable/ic_star"
            android:background="@drawable/square_transparent"/>
        <ImageView
            android:layout_width="@dimen/stat_star_ic_size"
            android:layout_height="@dimen/stat_star_ic_size"
            android:tint="@color/light_grey"
            android:src="@drawable/ic_star"
            android:background="@drawable/square_transparent"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:orientation="vertical"
            android:gravity="right">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/stats_text_padding_top"
                android:text="Games Played:"
                android:textAllCaps="true"
                android:fontFamily="sans-serif"
                android:textSize="@dimen/stats_text_size"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/stats_text_padding_top"
                android:text="Win Ratio:"
                android:textAllCaps="true"
                android:fontFamily="sans-serif"
                android:textSize="@dimen/stats_text_size"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/stats_text_padding_top"
                android:text="Continuous Wins:"
                android:textAllCaps="true"
                android:fontFamily="sans-serif"
                android:textSize="@dimen/stats_text_size"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/stats_text_padding_top"
                android:text="Max Wins Sequence:"
                android:textAllCaps="true"
                android:fontFamily="sans-serif"
                android:textSize="@dimen/stats_text_size"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/stats_text_padding_top"
                android:text="Best Time:"
                android:textAllCaps="true"
                android:fontFamily="sans-serif"
                android:textSize="@dimen/stats_text_size"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/stats_text_padding_top"
                android:text="@string/best_time_2"
                android:textAllCaps="true"
                android:fontFamily="sans-serif"
                android:textSize="@dimen/stats_text_size"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/stats_text_padding_top"
                android:text="@string/best_time_3"
                android:textAllCaps="true"
                android:fontFamily="sans-serif"
                android:textSize="@dimen/stats_text_size"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:gravity="left">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/stats_text_padding_top"
                android:text="145"
                android:textAllCaps="true"
                android:fontFamily="sans-serif"
                android:textSize="@dimen/stats_text_size"
                android:id="@+id/games_played"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/stats_text_padding_top"
                android:text="97.5%"
                android:textAllCaps="true"
                android:fontFamily="sans-serif"
                android:textSize="@dimen/stats_text_size"
                android:id="@+id/win_ratio"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/stats_text_padding_top"
                android:text="10"
                android:textAllCaps="true"
                android:fontFamily="sans-serif"
                android:textSize="@dimen/stats_text_size"
                android:id="@+id/wins_row"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/stats_text_padding_top"
                android:text="85"
                android:textAllCaps="true"
                android:fontFamily="sans-serif"
                android:textSize="@dimen/stats_text_size"
                android:id="@+id/wins_row_max"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/stats_text_padding_top"
                android:text="1:45"
                android:textAllCaps="true"
                android:fontFamily="sans-serif"
                android:textSize="@dimen/stats_text_size"
                android:id="@+id/best_time"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/stats_text_padding_top"
                android:text="1:59"
                android:textAllCaps="true"
                android:fontFamily="sans-serif"
                android:textSize="@dimen/stats_text_size"
                android:id="@+id/best_time_2"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/stats_text_padding_top"
                android:text="2:02"
                android:textAllCaps="true"
                android:fontFamily="sans-serif"
                android:textSize="@dimen/stats_text_size"
                android:id="@+id/best_time_3"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/stats_reset_btn_margin_top"
                android:text="Reset Stats"
                android:textAllCaps="true"
                android:fontFamily="sans-serif"
                android:textSize="@dimen/stats_text_size"
                android:textColor="@color/colorPrimary"
                android:background="@drawable/square_transparent"
                android:id="@+id/reset_btn"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
